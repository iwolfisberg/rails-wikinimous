<%= form_for(@article) do |f| %>
  <div class="form-group">
    <%= f.label :title %>
    <%= f.text_field :title, class: 'form-control' %>
  </div>

  <div class="form-group">
    <label class="control-label required" for="article_content">Content</label>
    <textarea data-editor="markdown" rows="10" class="form-control" name="article[content]" id="article_content"></textarea>
  </div>

  <%= f.submit class: 'btn btn-primary' %>
<% end %>
